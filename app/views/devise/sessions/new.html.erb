<h1>ログイン</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control",id: "exampleInputEmail1", placeholder:"Enter email", autocomplete: "email" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", id: "exampleInputPassword1", placeholder: "Password", autocomplete: "current-password" %>
  </div>
  <div class="form-group form-check">
    <%= f.check_box :remember_me, class: "form-check-input, new-html-erb-checkbox", id: "exampleCheck1" %>
    <%= f.label :remember_me, class: "form-check-label", for: "exampleCheck1" %>
  </div>
  <div class="login-btn">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="btn btn-light btn-sm">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "アカウント作成", new_registration_path(resource_name) %><br />
  <% end %>
</div>

<div class="btn btn-light btn-sm">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %><br />
  <% end %>
</div>




