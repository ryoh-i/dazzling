<h1>ログイン</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-login">
    <div style="width: 100%">
      <div style="width: 800px">
        <div class="form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, class: "form-control", id: "exampleInputEmail1", placeholder: "example@email.com", autocomplete: "email" %>
          <small id="emailHelp" class="form-text text-muted">※事前に本サイトでご登録いただいているメールアドレスを入力してください</small>
        </div>
        <div class="form-group">
          <%= f.label :password %><br/>
          <%= f.password_field :password, class: "form-control", id: "exampleInputPassword1", placeholder: "Password", autocomplete: "current-password" %>
        </div>
        <div class="form-group form-check">
          <%= f.check_box :remember_me, class: "form-check-input, new-html-erb-checkbox", id: "exampleCheck1" %>
          <%= f.label :remember_me, class: "form-check-label", for: "exampleCheck1" %>
        </div>
        <div class="login-btn">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

<% end %>

<div class="btn btn-light btn-sm">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "アカウントお持ちではない方はこちら", new_registration_path(resource_name) %><br/>
  <% end %>
</div>

<div class="btn btn-light btn-sm">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name) %><br/>
  <% end %>
</div>

<%= flash[:notice] %>
