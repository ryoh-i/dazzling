<!DOCTYPE html>
<html>
<head>
  <title>Dazzling</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header>
  <% if user_signed_in? %>
    <%= link_to "ログアウト", destroy_user_session_path, class: "button", method: :delete %>
    <%= link_to "口コミ一覧", posts_path, class: "button" %>
    <%= link_to "新規投稿", new_post_path, class: "button" %>
    <%= link_to "プロフィール編集", edit_user_registration_path, class: "button" %>
    <div class="home-image">
      <% if current_user.image? %>
        <p><%= image_tag current_user.image.to_s %></p>
      <% end %>
    </div>
  <% else %>
    <%= link_to "アカウント作成", new_user_registration_path, class: "button" %>
    <%= link_to "ログイン", new_user_session_path, class: "button" %>
    <%= link_to "ゲストログイン", users_guest_sign_in_path, class: "button", method: :post %>
  <% end %>

  <!--　下記homeに書くべき
  <div class = "home">
    <div class="content">
      <p>画像が入らないimage_tag と background-imageで試行中</p>
    </div>
  </div><%= image_tag '/assets/images/home/Home.jpg' %>-->

</header>


<%= yield %>
　<p class="notice"><%= notice %></p>
</body>
</html>
